{%- if settings.header_topbar_disable == blank -%}
<div class="top-links-container hidden-sm topbar-text-{{settings.topbar_text_color}}">
  <div class="container">
    <div class="top-links-inner">
      <div class="header-row">
        <div class="header-col header-left">
          <div class="search-area show-icon-tablet">
            <a href="javascript:void(0);" class="search-icon"><span><i class="icon-magnifier"></i></span></a>
            {% include 'header-search' %}
          </div>
        </div>
        <div class="header-col header-right">
          {%- if settings.topbar_custom_text != '' -%}
          <div class="topbar-custom-text"> 
            {{ settings.topbar_custom_text }} 
          </div>
          <div class="separator"></div>
          {% endif %} 
          {% include 'header-setting' %}
          <span class="separator"></span>
          <div class="top-links-area show-icon-tablet">
            <div class="top-links-icon">
              <a href="javascript:;">{{ 'header.settings.links' | t }}</a>
            </div>
            {% section 'header-toplink-menu' %}
          </div> 
          <div class="separator"></div>
          <div class="account-html"> 
            <ul class="view-account porto-view-account popup-menu show-arrow">
              <li class="menu-item has-sub narrow sub-ready">
                <a href="javascript:;" class="my-account" title="My Account"><i class="icon-user-2"></i></a>
                <div class="popup">
                  <div class="inner">
                    <ul class="sub-menu">
                      <li class="menu-item"> 
                        <a href="/account/">{{ 'header.settings.my_account' | t }}</a>
                      </li>
                      <li class="menu-item"> 
                        {%- if customer -%}
                        <a href="/account/logout">{{ 'header.settings.logout' | t }}</a>
                        {%- else -%}
                        <a href="/account/login">{{ 'header.settings.login' | t }}</a>
                        {%- endif -%}
                      </li>
                    </ul>
                  </div>
                </div>
              </li> 
            </ul>
          </div>
          <div class="wishlist-html">
            <a href="javascript:;" class="wishlist-popup" title="Wishlist"><i class="icon-wishlist-2"></i></a>
          </div>
          <div class="mini-cart">
            {% include 'header-cart' %}
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>
{%- endif -%}
<div class="header-main">
  <div class="header container">
    <div class="header-left visible-sm"> 
      <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div>
      {% include 'header-logo' %}
    </div>
    <div class="header-left hidden-sm">  
      <div class="main-nav wrapper-top-menu"> 
        <div id="main-top-nav" class="main-top-nav"> 
          <!-- Main Menu -->
          {% include 'main-menu' %}
          <!-- End Main Menu --> 
        </div> 
      </div>
    </div>
    <div class="header-center hidden-sm"> 
      {% include 'header-logo' %}
    </div> 
    <div class="header-right hidden-sm"></div>
    <div class="header-col header-right visible-sm">
      <div class="account-html"> 
        <ul class="view-account porto-view-account popup-menu show-arrow">
          <li class="menu-item has-sub narrow sub-ready">
            <a href="javascript:;" class="my-account" title="My Account"><i class="icon-user-2"></i></a>
            <div class="popup">
              <div class="inner">
                <ul class="sub-menu">
                  <li class="menu-item"> 
                    <a href="/account/">{{ 'header.settings.my_account' | t }}</a>
                  </li>
                  <li class="menu-item"> 
                    {%- if customer -%}
                    <a href="/account/logout">{{ 'header.settings.logout' | t }}</a>
                    {%- else -%}
                    <a href="/account/login">{{ 'header.settings.login' | t }}</a>
                    {%- endif -%}
                  </li>
                </ul>
              </div>
            </div>
          </li> 
        </ul>
      </div>
      <div class="wishlist-html">
        <a href="javascript:;" class="wishlist-popup" title="Wishlist"><i class="icon-wishlist-2"></i></a>
      </div>
      <div class="mini-cart">
        {% include 'header-cart' %}
      </div>
    </div> 
  </div>
</div> 