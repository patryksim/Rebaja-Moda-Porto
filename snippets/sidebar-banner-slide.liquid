<div class="banner-container">
  <div class="data-carousel"
       data-mobile="1"
       data-items="1"
       data-plus="false"
       data-auto=""
       data-paging="true"
       data-nav="false"
       data-prev=''
       data-next='' style="display: none;"></div>
  <div class="owl-carousel carousel-init">
    {% for i in (1..3) %}
    {% capture adv_title %}sidebar_banner_title_{{ i }}{% endcapture %}
    {% capture adv_content %}sidebar_banner_content_{{ i }}{% endcapture %}
    {% capture adv_link %}sidebar_banner_link_{{ i }}{% endcapture %}
    {% capture adv_button_text %}sidebar_banner_button_text_{{ i }}{% endcapture %}
    {% capture adv_image_use %}sidebar_banner_image_{{ i }}_use{% endcapture %}
    {% capture adv_image %}sidebar_banner_image_{{ i }}.png{% endcapture %}
    {% if settings[adv_image_use] %}
    <div class="item">
      <img data-src="{{ adv_image | asset_url }}" class="img-responsive"/>
      <div class="adv-content">
        <h3> 
          {{ settings[adv_title] }} 
        </h3>
        <span class="content"> 
          {{ settings[adv_content] }} 
        </span>
        <span class="action">
          <a href="{{ settings[adv_link] }}" class="btn-button bordered uppercase small"> 
            {{ settings[adv_button_text] }} 
          </a>
        </span>
      </div>
    </div>
    {% endif %}
    {% endfor %}
  </div>
</div>