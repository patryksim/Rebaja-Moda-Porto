{%- if settings.header_topbar_disable == blank -%}
<div class="top-links-container topbar-text-{{settings.topbar_text_color}}">
  <div class="container">
    <div class="top-links-inner"> 
      {%- if settings.topbar_custom_text2 != '' -%}
      <div class="custom-text">  
        {{ settings.topbar_custom_text2 }} 
      </div>
      {% endif %} 
      {% include 'header-setting' %}
      <div class="separator"></div>
      <div class="top-links-area show-icon-tablet">
        <div class="top-links-icon">
          <a href="javascript:;">{{ 'header.settings.links' | t }}</a>
        </div>
        {% section 'header-toplink-menu' %}
      </div> 
      {%- if settings.topbar_custom_text != '' -%}
      <div class="separator"></div>
      <div class="topbar-custom-text"> 
        {{ settings.topbar_custom_text }} 
      </div>
      {% endif %}
    </div>
  </div>
</div>
{%- endif -%}
<div class="header-middle">
  <div class="header container">
    <div class="header-left">
      <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div>
      {% include 'header-logo' %}
    </div>
    <div class="header-center"> 
      <div class="search-area show-icon-tablet">
        <a href="javascript:void(0);" class="search-icon"><span><i class="icon-magnifier"></i></span></a>
        {% include 'header-search' %}
      </div>
    </div>
    <div class="header-right">
      <div class="cart-area">
        {% if settings.header_custom_text != '' %}
        <div class="custom-block hidden-sm"> 
          {{ settings.header_custom_text }} 
        </div>
        {% endif %}
        <div class="header-contact visible-sm">
          <a class="my-account" href="/account"><i class="icon-user-2"></i></a>
          <a class="wishlist-popup mr-1" href="javascript:void(0)"><i class="icon-wishlist-2"></i></a>
        </div>
        <div class="mini-cart">
          {% include 'header-cart' %}
        </div>
      </div> 
    </div> 
  </div>
</div>
<div class="header-wrapper header-bottom">
  <div class="main-nav wrapper-top-menu">
    <div class="container header-row">
      <div class="header-col header-left">    
        <div id="main-top-nav" class="main-top-nav">
          <div class="toggle-menu">
            <div class="menu-container category-menu-style-default_new">
              <a href="javascript:void(0)">
                <i class="fa fa-bars"></i>
                {% if settings.header_category_text != '' %} 
                {{ settings.header_category_text }} 
                {% endif %}
              </a>
              <!-- Main Menu -->
              {% include 'side-menu' %}
              <!-- End Main Menu -->
            </div>
          </div>
        </div>
        <div class="second-menu">
          {% include 'main-menu', include_second_menu: true %}
        </div>
      </div> 
      <div class="header-col header-right"> 
        {%- if settings.custom_header_bottom != blank -%} 
        {{ settings.custom_header_bottom }}  
        {%- endif -%}
      </div> 
    </div>
  </div>
</div>