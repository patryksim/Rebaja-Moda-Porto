<!-- /snippets/comment.liquid -->
{% comment %}

  This snippet generates the structure of a comment.
  It is used to show not only recent comments, but also comments that were
  just published but not yet approved.

  More information:
   - http://docs.shopify.com/themes/liquid-variables/comment

{% endcomment %}

<div class="comment clearfix">
  {{ 'avatar.jpg' | asset_url | img_tag}}
  <div class="comment-block">
    <div class="comment-arrow"></div>
    <strong>{{ comment.author }}</strong>
    <div>
      {{ comment.content }}
    </div>
    <span><time datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">{{ comment.created_at | date: format: 'month_day_year' }}</time></span>
  </div>
</div>
