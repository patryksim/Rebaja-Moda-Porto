{%- if settings.header_topbar_disable == blank -%}
<div class="top-links-container topbar-text-{{settings.topbar_text_color}}">
  <div class="container">
    <div class="top-links-inner">
      {% if settings.topbar_custom_text2 != '' %}
      <div class="custom-block"> 
        {% include 'shortcode' load: settings.topbar_custom_text2 %}  
      </div>
      {% endif %} 
      <div class="top-links-area show-icon-tablet">
        <div class="top-links-icon">
          <a href="javascript:;">{{ 'header.settings.links' | t }}</a>
        </div>
        {% section 'header-toplink-menu' %}
      </div>
    </div>
  </div>
</div>
{%- endif -%}
<div class="header container">
  <div class="header-left">
    <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div>
    <div class="main-nav wrapper-top-menu hidden-sm">
      <div class="container-fluid no-padding">
        <div id="main-top-nav" class="main-top-nav"> 
          <!-- Main Menu -->
          {% include 'main-menu' %}
          <!-- End Main Menu --> 
        </div>
      </div>
    </div> 
  </div>  
  <div class="header-center">
    {% include 'header-logo' %}
  </div>
  <div class="header-right"> 
    {% if settings.header_custom_text != '' %} 
      {% include 'shortcode' load: settings.header_custom_text %}   
    {% endif %}
    <span class="separator d-none d-md-block m-r-lg ms-2" style="border-left: 1px solid #e7e7e7;height:40px;"></span>
    <div class="mini-cart text-pos-left">
      {% include 'header-cart' %}
    </div> 
  </div> 
</div> 