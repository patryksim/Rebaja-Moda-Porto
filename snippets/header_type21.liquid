<div class="header header-row container">
  <div class="header-left hidden-sm"> 
    {% if settings.header_custom_text2 != '' %}
      <div class="custom-block2"> 
        {{ settings.header_custom_text2 }} 
      </div>
      {% endif %}
  </div>
  <div class="header-left visible-sm">
    <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div> 
    {% include 'header-logo' %}  
  </div>
  <div class="header-center hidden-sm"> 
    {% include 'header-logo' %}  
  </div>
  <div class="header-right"> 
    <div class="cart-area"> 
      <div class="search-area show-icon visible-sm">
        <a href="javascript:void(0);" class="search-icon"><span><i class="icon-search"></i></span></a>
        {% include 'header-search' %}
      </div>
      {% if settings.header_custom_text != '' %}
      <div class="custom-block"> 
        {{ settings.header_custom_text }} 
      </div>
      {% endif %}
      <div class="mini-cart">
        {% include 'header-cart' %}
      </div>
    </div> 
  </div> 
</div>
<div class="header-wrapper header-bottom">
  <div class="main-nav wrapper-top-menu">
    <div class="container header-row">
      <div class="header-col header-left hidden-for-sm">    
        <div id="main-top-nav" class="main-top-nav">
          <div class="toggle-menu">
            <div class="menu-container category-menu-style-default_new">
              <a href="javascript:void(0)">
                <i class="fa fa-bars"></i>
                {% if settings.header_category_text != '' %} 
                {{ settings.header_category_text }} 
                {% endif %}
              </a>
              <!-- Main Menu -->
              {% include 'side-menu' %}
              <!-- End Main Menu -->
            </div>
          </div>
        </div>
        <div class="second-menu">
          {% include 'main-menu', include_second_menu: true %}
        </div>
      </div> 
      <div class="header-col header-right hidden-for-sm"> 
        <div class="search-area show-icon-tablet">
          <a href="javascript:void(0);" class="search-icon"><span><i class="icon-search"></i><span>{{ 'general.search.submit' | t }}</span></span></a>
          {% include 'header-search' %}
        </div>
      </div> 
    </div>
  </div>
</div>