<div class="footer_top_subscribe">
  {% if settings.newsletter_form_action != blank %}
  {% assign form_action = settings.newsletter_form_action %}
  {% else %}
  {% assign form_action = '#' %}
  {% endif %}
  <form action="{{ form_action }}" method="post" target="_blank" name="mc-embedded-subscribe-form">
    <div class="newsletter-widget">
      <input id="ftc-email" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" class="input-group-field" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}">
      <button type="submit" class="btn-button" name="subscribe">{{ 'general.newsletter_form.go' | t }}</button>
    </div>
  </form>
</div>