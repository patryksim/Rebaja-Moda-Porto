{{ 'sidebar.css' | asset_url | stylesheet_tag }}
{{ 'page-cart.css' | asset_url | stylesheet_tag }}
{%- assign sidebar_style = section.settings.sidebar_style -%}
{%- capture breadcrumb -%}
<div class="sp-page-header page-header-8">
  <ul class="breadcrumb text-center">
    <li class="current"><a href="/cart/">{{ 'cart.general.title' | t }}</a></li>
    <li class=""><i class="icon-angle-right"></i> <a href="/checkout/">{{ 'cart.general.checkout' | t }}</a></li>
    <li class="disable"><i class="icon-angle-right"></i> <a href="#">{{ 'cart.general.complete' | t }}</a></li>
  </ul>
</div>
{%- endcapture -%}
<div class="container"> 
  <div class="row">
    {%- assign sidebar_class = 'col-lg-3' -%}
    {%- if section.settings.sidebar_left != blank -%}
    {%- assign main_class = 'col-lg-9' -%}
    {%- endif -%} 
    {%- if section.settings.sidebar_right != blank -%}
    {%- assign main_class = 'col-lg-9' -%} 
    {%- endif -%}
    {%- if section.settings.sidebar_left != blank and section.settings.sidebar_right != blank -%}
    {%- assign main_class = 'col-lg-6' -%} 
    {%- endif -%}   
    {%- if section.settings.sidebar_left == blank and section.settings.sidebar_right == blank -%}
    {%- assign main_class = 'col-lg-12' -%} 
    {%- endif -%}   
    <div class="{{main_class}} main-content main-cart">
      {%- if settings.sidebar_move != blank -%}
      {{breadcrumb}}
      {%- endif -%}  
      {% include 'cart-template' %}
    </div>
    {% if section.settings.sidebar_left != blank %}
    <div class="{{sidebar_class}} sidebar col-left">
      {% include 'sidebar-left' %}
    </div>
    {% endif %}  
    {% if section.settings.sidebar_right != blank %}
    <div class="{{sidebar_class}} sidebar-right col-right">
      {% include 'sidebar-right' %}
    </div>
    {% endif %} 
  </div>
</div>

