{%- if section.blocks.size > 0 -%}
{%- assign col = 12 | divided_by: section.blocks.size -%}
{%- else -%}
{%- assign col = 4 -%}
{%- endif -%}
<div class="home_bar_main" data-section-id="{{ section.id }}" data-section-type="home-bar-section">
  <div class="homepage-bar homepage-bar-{{ section.id }}" style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    <div class="container">
      <div class="block_content">
        <div class="row">
          {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
          <div class="col-lg-{{col}}">
            <i class="{{ block.settings.item_icon }}"></i>
            <div class="text-area">
              <h3> 
                {{ block.settings.item_title }} 
              </h3>
              <p> 
                {{ block.settings.item_text }} 
              </p>
            </div>
          </div>
          {%- endfor -%}
          {%- else -%}
          <p>No Content</p>
          {%- endif -%}
          <div style="clear:both;"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
.homepage-bar-{{ section.id }}{
  background-color: {{ section.settings.bg_section_color }};
  color: {{ section.settings.icon_content_color }};
}
.homepage-bar-{{ section.id }} .text-area h3,
.homepage-bar-{{ section.id }} .text-area p{
  color: {{ section.settings.text_content_color }};
}
.homepage-bar-{{ section.id }} .col-lg-{{col}}{
  border-color: {{ section.settings.border_color_block }};
} 
</style>
