{{ 'section-instagram.css' | asset_url | stylesheet_tag }}
<!-- config color -->
<style>
.blog-items .insta-follow {
  background-color: {{ section.settings.background_content_color }};
}
.blog-items .insta-follow i {
  color: {{ section.settings.icon_color }};
}
.blog-items .insta-follow h3 {
  color: {{ section.settings.text_color }};
}
.blog-items .insta-follow a {
  color: {{ section.settings.button_text_color }};
  background-color: {{ section.settings.button_background_color }};
  border-color: {{ section.settings.button_border_color }};
}
</style>
<!-- end config color -->
<div data-section-id="{{ section.id }}" data-section-type="instagram-section">
  <div id="instagram-section-{{ section.id }}" class="instagram-section {% if section.settings.type_instagram == '1' %}type1{% else %}type2{% endif %}" style="background-color:{{section.settings.bg_section_color}}; margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    <div class="container title-{{section.settings.title_border_style}}">
      {%- if section.settings.title != '' and section.settings.title_visible == 'true' -%}
      <h2 class="section-title text-{{section.settings.title_align}}">
        {%- if section.settings.title_border_style == 'border-middle' and section.settings.title_align != 'left' -%}
        <span class="line-l"></span>
        {%- endif -%}
        <span class="inline-title"> 
          {{ section.settings.title }} 
        </span>
        {%- if section.settings.title_border_style == 'border-middle' and section.settings.title_align != 'right' -%}
        <span class="line-r"></span>
        {%- endif -%}
      </h2>
      {%- endif -%}
      <div style="position:relative;">
        <div class="block-instafeed blog-wrap">
          <div class="blog-items blog-grid-items{% if section.settings.hover_effect == 'true' %} enable-effect{% endif %}">
            <div class="blog-instagrams {% if section.settings.layout_instagram != '2' %}owl-carousel instagram-feed-carousel owl-lazy-container{% else %}instagrams-grid item-1200-{{section.settings.column}} item-992-4 item-768-3 item-640-2 item-320-1{% endif %}" data-type="{{section.settings.layout_instagram}}" data-count="{{ section.settings.instagram_limit }}" data-token="{{ section.settings.instagram_accesstoken }}" data-media_type="{{ section.settings.instagram_media_type }}" data-caption="{{ section.settings.instagram_caption }}" data-itemclass="col-md-ic-1" data-autoplay="{{ section.settings.autoplay }}" data-desktop="{{ section.settings.item_desktop }}" data-desktop-large="{{ section.settings.item_desktop_large }}" data-tablet="{{ section.settings.item_tablet }}" data-mobile="{{ section.settings.item_mobile }}" data-nav="false" data-page="false" data-margin="0"></div>
            {%- if section.settings.use_content -%}
            <div class="insta-follow insta-content-style{{section.settings.content_style}}"> 
              <div class="d-flex align-items-center">
                <i class="fa {{ section.settings.class_icon }}"></i>
                <h3>{{ section.settings.text_1 }}</h3>
                <span>{{ section.settings.text_2 }}</span>
                <a class="btn btn-default" href="{{section.settings.button_link}}">{{ section.settings.text_button }}</a>
              </div> 
            </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
