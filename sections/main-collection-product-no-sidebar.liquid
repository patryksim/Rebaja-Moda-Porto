{% if cart.attributes.layout != blank and cart.attributes.layout %}
{% assign layout = cart.attributes.layout %}
{% else %}
{% assign layout = section.settings.collection_view_mode %}
{% endif %} 

{%- if section.settings.collection_view_mode == 'grid' or section.settings.collection_view_mode == 'divider' -%}
