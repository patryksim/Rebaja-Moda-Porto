        {
          "type": "color",
          "id": "text1color",
          "label": "t:sections.instagram-shop.blocks.content.settings.text1color.label",
          "default": "#333"
        },
        {
          "type": "color",
          "id": "text2color",
          "label": "t:sections.instagram-shop.blocks.content.settings.text2color.label",
          "default": "#333"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.instagram-shop.presets.name",
      "category": "Instagram",
      "blocks": [
        {
          "type": "content",
          "settings": {
            "content_text1": "Instagram Shop",
            "content_text2": "Snapppt is a free instagram shop plugin that turns your instagram images into picture perfect shoppable links"
