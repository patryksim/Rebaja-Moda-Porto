    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "t:sections.instagram-shop.settings.margin_top.label",
      "info": "40px"
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "t:sections.instagram-shop.settings.margin_bottom.label",
      "info": "40px"
    },
    {
