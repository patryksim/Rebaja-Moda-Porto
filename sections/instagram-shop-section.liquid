<div data-section-id="{{ section.id }}" data-section-type="instagram-shop-section">
  <div class="intagram-shop" style="background-color:{{section.settings.bg_section_color}}; margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    <div class="container">
      {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
      <div class="content">
        {%if block.settings.content_text1 != ''%}
        <h2 style="color:{{block.settings.text1color}};">{{block.settings.content_text1}}</h2>
        {%- endif -%}
        {%if block.settings.content_text2 != ''%}
        <p style="color:{{block.settings.text2color}};">{{block.settings.content_text2}}</p>
        {%- endif -%}
      </div>
      {%- endfor -%}
      {%- endif -%}
      <div class="main-shop" style="margin-left:-7.5px;margin-right:-7.5px;">
      {{ section.settings.instagramjs }}
      </div>
    </div>
  </div>
</div>
<style>
.hotspot-modal .modal-content {
  background-color: #fff !important;
}
public-modal .public-hotspot-info-holder .public-hotspot-info .public-hotspot-info__price {
